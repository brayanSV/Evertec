<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="20dp" android:height="20dp">
        <selector>
            <item android:state_pressed="false">
                <shape android:shape="oval">
                    <solid android:color="@color/red_DF0000"></solid>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <solid android:color="@color/red_FF0000"></solid>
                </shape>
            </item>
        </selector>
    </item>

    <item
        android:drawable="@drawable/ic_subtract"
        android:width="10dp"
        android:height="10dp"
        android:top="5dp"
        android:left="5dp"/>
</layer-list>
